<h1>EAT-Da-BURGER</h1>

<h2>ORDER UP</h2>

<ul>
  {{#each hamburgers}}
    {{#unless eaten}}
      {{> hamburgers/hamburger-block burger=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers Devoured!</h2>

<ul>
  {{#each hamburgers}}
    {{#if eaten}}
      {{> hamburgers/hamburger-block burger=false}}
    {{/if}}
  {{/each}}
</ul>

<h2>Order Here</h2>
<form class="create-form">

  <div class="form-group">
    <label for="eat">Burger Name:</label>
    <input type="text" id="eat" name="name">
  </div>

  <button type="submit">Add</button>
</form>
